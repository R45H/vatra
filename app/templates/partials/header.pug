include ../components/search
include ../components/menu

// HEADER
header.header
	.container.header__wrap

		.row.header__top

			.col-12.col-sm-4.col-lg-3.header__col.header__logo-wrap
				include ../components/logo

			.col-sm-8.col-lg.header__col
				+search(search[0])

			.col-sm.col-lg-3.header__col.header__contacts-wrap
				a.link.header__tel(href= 'tel:' + global.tel_link)= global.tel
				.header__time= 'ежедневно с ' + global.time_start + ' до ' + global.time_end

		.row

			.col-12.col-sm
				+menu(class='header__menu')

			.col-sm-3.col-lg-2
				.header__count-wrap
					a.count.count_bag.header__count(href='#') 3
					a.count.count_favourite.header__count(href='#') 2