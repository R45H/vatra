include fancybox
include ../components/num

mixin item(data)
	.item
		.item__text-wrap

			.item__text-col
				a.link.link_gray.item__title(href= data.link)= data.title
				ul.item__params

					each val in data.params
						li.item__param
							span.item__param-name= val.name + ': '
							span.item__param-val= val.value

			.item__text-col.item__text-col_fixed
				.item__row

					.item__price-wrap
						.item__price-col

							if data.old_price
								.item__old-price= data.old_price + ' '
									i.fa.fa-rub
									|
									| / м
									sup 2

							.item__price(class= data.old_price ? 'item__price_strong' : '')= data.price + ' '
								i.fa.fa-rub
								|
								| / м
								sup 2

						a.favourite.item__favourite(href='#')

				.item__row
					+num
				.item__row
					a.btn.btn_wide(href='#') В корзину

		.item__img-wrap

			.item__row
				a.item__img-link(
					href= data.img
					data-fancybox
					data-caption= data.title
					style= data.size ? 'width: ' + data.size.width + 'px' + '; height: ' + data.size.height + 'px' : ''
				)
					.item__img(
						style='background-image: url("' + data.img + '");'
						role='img'
						aria-label= data.title
						title= data.title
					)

			.item__row
				a.item__link.item__link_more(href= data.link)
					i.fa.fa-info-circle
					|
					| Подробнее
				a.item__link.item__link_zoom(href='#')
					i.fa.fa-plus-circle
					|
					| Увеличить