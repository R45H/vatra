mixin card(data)
	.card

		a.card__img-wrap(href= data.link)
			.card__img(
				style='background-image: url(' + data.img + ');'
				role='img'
				aria-label= data.title
				title= data.title
			)

		.card__text-wrap
			.card__title
				a.link.card__title-name(href= data.link)= data.title
				|
				| |
				|
				span.card__title-manufacturer= data.manufacturer
				| ,
				|
				span.card__title-country= data.country

			.card__price-wrap

				if data.price
					.card__price= 'от ' + data.price + ' '
						i.fa.fa-rub
						|
						| / м
						sup 2

				a.favourite.card__favourite(href='#')

		if data.notice
			.card__notice= data.notice