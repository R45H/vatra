			a.link(href='#') .link
				i.fa.fa-long-arrow-right.link__arrow-right

	.row.main__separator
		.col-1.main__space-col
			.btn .btn
		.col-1.main__space-col
			a.btn(href='#') a.btn
		.col-2.main__space-col
			input.btn(type='button' value='input.btn')
		.col-2.main__space-col
			button.btn button.btn
		.col-2.main__space-col
			.btn.btn_sm .btn.btn_sm
		.col-2.main__space-col
			.btn.btn_text-sm .btn.btn_text-sm
		.col-2.main__space-col
			.btn.btn_wide .btn.btn_wide
		.col-2.main__space-col
			.btn.btn_gray .btn.btn_gray
		.col-3
			.btn.btn_lightgray .btn.btn_lightgray

	.row.main__separator
		.col-2.main__space-col
			input.input(type='text' placeholder='.input')
		.col-2.main__space-col
			input.input.input_sm(type='text' placeholder='.input.input_sm')
		.col-3.main__space-col
			input.input.input_wide(type='text' placeholder='.input.input_wide')
		.col-2.main__space-col
			input.input.input_invalid(type='text' placeholder='.input.input_invalid')
		.col-3.main__space-col
			textarea.input(placeholder='textarea.input')
		.col-3
			input.input.input_lightgray(type='text' placeholder='.input.input_lightgray')

	.row.main__separator
		.col-4
			+search(search[0])

	.row.main__separator
		.col-2
			+select(select[0].item)
		.col-2
			+select(select[0].item, {
				wide: true
			})
		.col-2
			+select(select[1].item)

	.row.main__separator
		.col-2
			+check({
				value: '1',
				text: '.check'
			})
		.col-2
			+check({
				value: '2',
				text: '.check:checked',
				checked: true
			})
		.col-2
			+check({
				value: '3',
				text: '.check.check_partial'
			})(class='check_partial')
		.col-2
			+check({
				value: '4',
				text: '.check.check_btn'
			})(class='check_btn')
		.col-3
			+check({
				value: '5',
				text: '.check.check_btn:checked',
				checked: true
			})(class='check_btn')

	.row.main__separator
		.col-12
			+check-group(check_group)

	.row.main__separator
		.col-12
			+check-block(select[2].item)

	.row.main__separator
		.col-4
			+check-list(check_list[1])

	.row.main__separator
		.col-12
			include ../components/logo

	.row.main__separator
		.col-12
			+num

	.row.main__separator
		.col-1
			a.favourite(href='#')
		.col-1
			a.favourite.favourite_active(href='#')

	.row.main__separator
		.col-1
			a.count.count_bag(href='#') 3
		.col-1
			a.count.count_favourite(href='#') 2

	.row.main__separator
		.col-4
			+social(social)

	.row.main__separator
		.col-4
			.discount .discount

	.row.main__separator
		each val in card
			.col-3
				+card(val)

	.row.main__separator
		.col-12
			+cat(cat[0])

	.row.main__separator
		.col-2
			+cat-icon(cat_icon[0])

	.row.main__separator
		.col-6
			.container
				+slider
		.col-6
			.container
				+slider(class='slider_dots')

	.row.main__separator
		.col-4
			+item(item[1])
		.col-4
			+item(item[0])

	.row.main__separator
		.col-3
			+fancybox({
				link: 'img/content/card/01.jpg',
				title: 'Img 1',
				group: 'group-1'
			})
		.col-3
			+fancybox({
				link: 'img/content/card/01.jpg',
				title: 'Img 1',
				group: 'group-1',
				bg: true
			})

	.row.main__separator
		.col-12
			+news(news[0])

	.row.main__separator
		.col-12
			include ../components/map

	.row.main__separator
		+detail({
			more: true
		})